<h1>Create a New Specsheet</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for Sheet.new, :url => {:action => :create, :controller => :sheets} do |f| %>
      <div class="input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1">Name of Specsheet:</span>
        <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
      </div>
  <br>
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon1">Description:</span>
          <%= f.text_field :description, class: 'form-control', placeholder: "Description" %>


          <%= f.text_field :column_header, class: 'form-control', placeholder: "Description" %>
          <%= f.text_field :column_type, class: 'form-control', placeholder: "Description" %>

          
        </div>
      </div>
  <br><br><br>
      <div class="col-lg-2">
        <button type="button" class="btn btn-default">Add Column</button>
      </div>

      <div class="form-group">
        <%= f.submit "Save Specsheet!", class: 'btn btn-default' %>
      </div>
    <% end %>
      <%= render partial: "column_form" %>
  <br><br><br>
  </div>
</div>
